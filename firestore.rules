rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      // Checking custom claims set by the Firebase Admin SDK to avoid extra document reads
      return isAuthenticated() && 
        (request.auth.token.role == 'admin' || request.auth.token.role == 'superadmin');
    }

    // Users
    match /users/{userId} {
      // Changed from true to isAuthenticated() to prevent completely anonymous scraping of user profiles.
      allow read: if isAuthenticated(); 
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
      
      // Allow users to manage their favorite categories
      match /favorite_categories/{docId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Products
    match /products/{productId} {
      allow read: if true;
      allow create: if isAuthenticated() && 
                     request.resource.data.sellerId == request.auth.uid;
      allow update: if isAuthenticated() && 
                     (resource.data.sellerId == request.auth.uid || isAdmin());
      // Allow sellers to delete their own products, or admins
      allow delete: if isAuthenticated() && 
                     (resource.data.sellerId == request.auth.uid || isAdmin());
    }

    // Ads - Public Read, Admin Write
    match /ads/{adId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Categories
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Reviews
    match /reviews/{reviewId} {
      allow read: if true;
      // Users must be authenticated to create reviews
      allow create: if isAuthenticated(); 
      allow update, delete: if isAdmin();
    }
    
    // Wanted Listings (WTB)
    match /wanted_listings/{listingId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Bids
    match /bids/{bidId} {
       allow read: if isAuthenticated() && (resource.data.bidderId == request.auth.uid || isAdmin());
       allow create: if isAuthenticated();
       allow update: if isAdmin();
    }

    // Notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.recipientId == request.auth.uid;
      allow create: if isAuthenticated(); // Or system-only, but let's allow for now
      allow update: if isAuthenticated() && resource.data.recipientId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.recipientId == request.auth.uid;
    }

    // Settings
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
