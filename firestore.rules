rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- GLOBAL HELPERS ---
    function isSignedIn() { 
      return request.auth != null; 
    }
    
    function isOwner(userId) { 
      return request.auth.uid == userId; 
    }
    
    // TODO: Migrate to Custom Claims for better scalability
    function isSuperAdmin() { 
      return isSignedIn() && (
        request.auth.uid == 'O5nCLgbIaRRRF369K0kjgT59io73' || 
        (request.auth.token.keys().hasAny(['role']) && request.auth.token.role == 'superadmin')
      );
    } 

    function isAdmin() {
      return isSignedIn() && (request.auth.token.admin == true || isSuperAdmin());
    }

    // --- PRIMARY COLLECTIONS ---

    // Products: Public read, Authenticated create, Owner/Admin update/delete
    match /products/{productId} {
      allow read: if true;
      // LOCKDOWN: Creation must happen via Server Action (createProductAction)
      allow create: if false; 
      allow update, delete: if isSignedIn() && (resource.data.sellerId == request.auth.uid || isSuperAdmin());
    }
    
    // Categories: Public read, Admin write
    match /categories/{categoryId} {
      allow read, list: if true;
      allow write: if isSuperAdmin();
    }

    // Reviews: Public read, Buyer create, Admin update/delete
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.buyerId == request.auth.uid;
      allow update, delete: if isSuperAdmin();
    }

    // Orders: Involved parties only or Super Admin
    match /orders/{orderId} {
        allow read, update: if isSignedIn() && (resource.data.buyerId == request.auth.uid || resource.data.sellerId == request.auth.uid || isSuperAdmin());
        allow list: if isSignedIn() && (request.auth.uid == resource.data.buyerId || request.auth.uid == resource.data.sellerId || isSuperAdmin());
        // LOCKDOWN: Creation must happen via Server Action
        allow create: if false;
    }

    // Platform Stats: Consolidated Rule
    match /platform_stats/{statId} {
      // Allow public read for global stats (if that's desired behavior for homepage), otherwise restricted
      // If homepage uses Client SDK to read stats, this needs to be 'if true'. 
      // If homepage uses Server Action (Admin SDK), this can be restrictive.
      // Assuming public stats for now based on current app behavior:
      allow read: if true; 
      allow write: if isSuperAdmin();
    }

    // Users: Owner or Admin management
    match /users/{userId} {
      allow get: if true; // Profile pages
      allow list: if isSuperAdmin();
      allow create, update, delete: if request.auth.uid == userId || isSuperAdmin();

      // Subcollections
      match /favorites/{favoriteId} {
         allow read, write: if request.auth.uid == userId;
      }
      
      match /private/wishlist/{itemId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Settings: Public READ (for app config), Admin WRITE (Critical Fix)
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    // Conversations: Participants only
    match /conversations/{conversationId} {
      allow read, update, delete: if isSignedIn() && request.auth.uid in resource.data.participantIds;
      // Keeping conversation creation open for now as it might be used by "Message Seller" direct writes in some legacy components
      // Ideally this should also be server action, but "Guest Enquiries" handles the specific guest case.
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participantIds;

      match /messages/{messageId} {
         allow read: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
         allow create: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds
                      && request.resource.data.senderId == request.auth.uid;
      }
    }

    // Notifications: Recipient only or Admin
    // Notifications: Recipient only or Admin
    match /notifications/{notificationId} {
      allow list: if isSuperAdmin() || (isSignedIn() && resource.data.recipientId == request.auth.uid);
      allow get: if isSuperAdmin() || (isSignedIn() && resource.data.recipientId == request.auth.uid);
      allow update: if isSuperAdmin() || (isSignedIn() && resource.data.recipientId == request.auth.uid);
      allow create: if false; 
    }

    // Donations: Public read (transparency), Admin only write (implicit by absence of allow write)
    match /donations/{donationId} {
      allow read: if isSignedIn();
    }

    // Forum Posts & Replies
    match /forum_posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.authorId == request.auth.uid;
    }

    match /forum_replies/{replyId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.authorId == request.auth.uid;
    }

    // Verification Requests
    match /verification_requests/{requestId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isSuperAdmin());
      allow update: if isSuperAdmin();
    }

    // Audit Logs: Super Admin only
    match /audit_logs/{logId} {
      allow read, list: if isSuperAdmin();
      allow write: if false; // Only backend admin SDK creates these
    }
    
    // Enquiries: Locked down (use Server Action)
    match /enquiries/{enquiryId} {
      allow create: if false; 
      allow read, list: if isSuperAdmin();
      allow update, delete: if isSuperAdmin();
    }
    
    // Guest Enquiries: Locked down (use Server Action)
    match /guest_enquiries/{enquiryId} {
      allow create: if false; 
      allow read, list: if isSuperAdmin();
      allow update, delete: if isSuperAdmin();
    }
  }
}
