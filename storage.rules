rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Validation functions
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    function isSizeValid() {
      // Limit to 5MB
      return request.resource.size < 5 * 1024 * 1024;
    }

    // Allow public read access to product images.
    // Write access is restricted to the user who owns the product folder.
    match /products/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && isImage()
                   && isSizeValid();
    }

    // Verification documents should be private.
    // Only the user who uploaded them and an admin should have access.
    match /verification-docs/{userId}/{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Media library files are readable by anyone, writable only by authenticated users.
    match /media-library/{allPaths=**} {
       allow read: if true;
       allow write: if request.auth != null && isImage();
    }

    // Temporary uploads for AI analysis (Auto-Fill)
    match /temp-analysis/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId && isImage();
    }

    // Temporary uploads for AI Grading
    match /grading-temp/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId && isImage();
    }

  }
}
