# ----------------------------------------------------------------------------
# FEATURE TOGGLES
# ----------------------------------------------------------------------------
# Set to "true" or "false" to enable/disable features
ENABLE_WTB="true"                    # Wanted To Buy marketplace
ENABLE_BIDSY="true"                  # Unpriced offers (Make Offer)
ENABLE_CONSIGNMENT="true"            # Consignment service
ENABLE_VAULT="true"                  # Authentication vault service
ENABLE_AI_GRADING="true"             # AI card grading
ENABLE_PRICE_ASSISTANT="true"        # AI price suggestions
ENABLE_RESEARCH="true"               # Research & collection tools
ENABLE_PARTNER_PROGRAM="true"        # Store partner program

# ----------------------------------------------------------------------------
# FIREBASE CONFIGURATION (REQUIRED)
# ----------------------------------------------------------------------------
# Get these from Firebase Console > Project Settings > General
NEXT_PUBLIC_FIREBASE_API_KEY="your-api-key-here"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="123456789"
NEXT_PUBLIC_FIREBASE_APP_ID="1:123456789:web:abc123"
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID="G-XXXXXXXXXX"

# Firebase Admin SDK (Server-side only)
# Get from Firebase Console > Project Settings > Service Accounts
FIREBASE_ADMIN_PROJECT_ID="your-project-id"
FIREBASE_ADMIN_CLIENT_EMAIL="firebase-adminsdk@your-project.iam.gserviceaccount.com"
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"

# ----------------------------------------------------------------------------
# STRIPE CONFIGURATION (REQUIRED)
# ----------------------------------------------------------------------------
# Get from Stripe Dashboard > Developers > API Keys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."  # or pk_live_...
STRIPE_SECRET_KEY="sk_test_..."  # or sk_live_...
STRIPE_WEBHOOK_SECRET="whsec_..."  # For webhook verification
ENABLE_STRIPE="true"

# ----------------------------------------------------------------------------
# GOOGLE SERVICES (OPTIONAL)
# ----------------------------------------------------------------------------
# Google Maps API (for location features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=""
ENABLE_GOOGLE_MAPS="false"

# Google Analytics
NEXT_PUBLIC_GA_ID=""  # G-XXXXXXXXXX

# Facebook Pixel
NEXT_PUBLIC_FB_PIXEL_ID=""

# ----------------------------------------------------------------------------
# EMAIL CONFIGURATION (OPTIONAL)
# ----------------------------------------------------------------------------
# For transactional emails (e.g., SendGrid, Mailgun, AWS SES)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASSWORD=""
EMAIL_FROM="noreply@picksy.au"

# ----------------------------------------------------------------------------
# DEVELOPMENT SETTINGS
# ----------------------------------------------------------------------------
# Set to "true" to use Firebase Emulators
USE_FIREBASE_EMULATOR="false"
FIRESTORE_EMULATOR_HOST="localhost:8080"
AUTH_EMULATOR_HOST="localhost:9099"
STORAGE_EMULATOR_HOST="localhost:9199"

# ----------------------------------------------------------------------------
# SECURITY & CORS
# ----------------------------------------------------------------------------
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS="https://picksy.au,https://www.picksy.au"

# ----------------------------------------------------------------------------
# BUSINESS LOGIC (OPTIONAL)
# ----------------------------------------------------------------------------
# Platform commission rate (percentage)
PLATFORM_COMMISSION_RATE="10"

# Minimum and maximum listing prices (in cents)
MIN_LISTING_PRICE="100"  # $1.00
MAX_LISTING_PRICE="1000000"  # $10,000.00

# Require ID verification for selling
REQUIRE_SELLER_VERIFICATION="true"

# Auto-approve sellers (or require manual approval)
AUTO_APPROVE_SELLERS="false"

# ----------------------------------------------------------------------------
# NOTES
# ----------------------------------------------------------------------------
# 1. Never commit .env.local to version control
# 2. Use different Firebase projects for dev/staging/production
# 3. Rotate API keys regularly for security
# 4. Test thoroughly before deploying to production
# 5. Keep this template updated as new features are added
# ============================================================================
